{% extends 'base.html.twig' %}

{% block title %}MJ INK | Connexion{% endblock %}

{% block body %}

<section class="bg-gray-50 h-screen">
  <div class="flex flex-col items-center px-6 py-8 mx-auto md:h-screen">
    <h1 class="font-light text-center font-serif text-3xl mb-10"><a href="{{ path('app_home') }}">MJ INK' TATTOO & BARBER</a></h1>
      <div class="w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0">
          <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
              <h2 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl text-center">
                  Connectez-vous
              </h2>
              <form class="space-y-4 md:space-y-6" method="post">
                  {% if error %}
                    <div id="toast-default" class="flex justify-center items-center w-full max-w-xs p-2 text-gray-500 rounded-lg shadow mx-auto bg-red-500" role="alert">
                        <div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-red-500 bg-red-50 rounded-lg">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                            <path fill-rule="evenodd" d="M11.484 2.17a.75.75 0 011.032 0 11.209 11.209 0 007.877 3.08.75.75 0 01.722.515 12.74 12.74 0 01.635 3.985c0 5.942-4.064 10.933-9.563 12.348a.749.749 0 01-.374 0C6.314 20.683 2.25 15.692 2.25 9.75c0-1.39.223-2.73.635-3.985a.75.75 0 01.722-.516l.143.001c2.996 0 5.718-1.17 7.734-3.08zM12 8.25a.75.75 0 01.75.75v3.75a.75.75 0 01-1.5 0V9a.75.75 0 01.75-.75zM12 15a.75.75 0 00-.75.75v.008c0 .414.336.75.75.75h.008a.75.75 0 00.75-.75v-.008a.75.75 0 00-.75-.75H12z" clip-rule="evenodd" />
                            </svg>
                            <span class="sr-only">Fire icon</span>
                        </div>
                        <div class="ml-3 text-white font-normal">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    </div>
                    {% endif %}
                  <div>
                      <label for="inputEmail" class="block mb-2 text-sm font-medium text-gray-900 ">Adresse mail</label>
                      <input type="email" name="email" id="inputEmail" value="{{last_username }}" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" placeholder="john@exemple.fr" autocomplete="email" required autofocus>
                  </div>
                  <div>
                      <label for="inputPassword" class="block mb-2 text-sm font-medium text-gray-900">Mot de passe</label>
                      <input type="password" name="password" id="inputPassword" placeholder="••••••••" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" autocomplete="current-password" required>
                  </div>
                  <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"> 
                  <div class="flex items-center justify-between">
                      <a href="{{ path('app_forgot_password_request') }}" class="text-sm font-medium text-primary-600 hover:underline">Mot de passe oublié ?</a>
                  </div>
                  <button type="submit" class="w-full text-white focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center bg-gray-900 hover:bg-gray-950">Connexion</button>
                  <p class="text-sm font-light text-gray-500">
                      Vous n'avez pas de compte ? <a href="{{ path('app_register') }}" class="font-medium text-primary-600 hover:underline">Inscrivez-vous</a>
                  </p>
              </form>
          </div>
      </div>
  </div>
</section>


    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

{% endblock %}
