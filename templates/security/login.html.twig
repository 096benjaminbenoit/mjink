{% extends 'base.html.twig' %}

{% block title %}MJ INK | Connexion{% endblock %}

{% block body %}

<section class="bg-gray-50 h-screen">
  <div class="flex flex-col items-center px-6 py-8 mx-auto md:h-screen">
    <h1 class="font-light text-center font-serif text-3xl mb-10">MJ INK' TATTOO & BARBER</h1>
      <div class="w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0">
          <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
              <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl text-center">
                  Connectez-vous
              </h1>
              <form class="space-y-4 md:space-y-6" method="post">
                  {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                {# {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %} #}
                  <div>
                      <label for="inputEmail" class="block mb-2 text-sm font-medium text-gray-900 ">Adresse mail</label>
                      <input type="email" name="email" id="inputEmail" value="{{last_username }}" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" placeholder="john@exemple.fr" autocomplete="email" required autofocus>
                  </div>
                  <div>
                      <label for="inputPassword" class="block mb-2 text-sm font-medium text-gray-900">Mot de passe</label>
                      <input type="password" name="password" id="inputPassword" placeholder="••••••••" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" autocomplete="current-password" required>
                  </div>
                  <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"> 
                  <div class="flex items-center justify-between">
                      <a href="{{ path('app_forgot_password_request') }}" class="text-sm font-medium text-primary-600 hover:underline">Mot de passe oublié ?</a>
                  </div>
                  <button type="submit" class="w-full text-white focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center bg-gray-900 hover:bg-gray-950">Connexion</button>
                  <p class="text-sm font-light text-gray-500">
                      Vous n'avez pas de compte ? <a href="{{ path('app_register') }}" class="font-medium text-primary-600 hover:underline">Inscrivez-vous</a>
                  </p>
              </form>
          </div>
      </div>
  </div>
</section>

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

{% endblock %}
