{% extends 'base.html.twig' %}


{% block title %}MJ INK | Vos rendez-vous{% endblock %}

{% block body %}
<section class="bg-gray-50">
  <div class="flex flex-col justify-items-center px-6 py-8 mx-auto md:h-screen">
    <div class="flex justify-between md:justify-center items-center mb-5 mx-5">
      <h1 class="font-light font-serif text-md sm:text-lg lg:text-3xl"><a href="{{ path('app_home') }}">MJ INK' TATTOO & BARBER</a></h1>
      <button class="md:hidden" id="burgerBtn">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 5.25h16.5m-16.5 4.5h16.5m-16.5 4.5h16.5m-16.5 4.5h16.5" />
          </svg>        
      </button>
    </div>
      <div class="w-full bg-white rounded-lg shadow md:pb-10">

        {% include 'components/nav.html.twig' %}

          <div class="p-6 space-y-4 md:space-y-6 sm:p-8 md:w-3/4 mx-auto">
              <h2 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl text-center">
                  Bonjour {{ user.firstName }},
              </h2>
              <div class="space-y-5 flex flex-col justify-center items-center">
                {% if upcomingAppointment == null %}
                    <p class="text-center">Actuellement, vous n'avez pas de rendez-vous prévu</p>
                    <a href="{{ path('app_appointment') }}" type="submit" class="w-1/2 text-white focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center bg-gray-900 hover:bg-gray-950">Prendre rendez-vous</a>
                {% else %}
                    <p>Récapitulatif de votre prochain rendez-vous :</p>
                    <span class="text-center border border-gray-300 text-gray-900 font-medium sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5">{{ upcomingAppointment.start|date('d/m/Y à H:i') }}</span>
                    <span class="text-center border border-gray-300 text-gray-900 font-medium sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5">{{ upcomingAppointment.service.name }}</span>
                    <span class="text-center border border-gray-300 text-gray-900 font-medium sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5">{{ upcomingAppointment.employee.firstName }}</span>
                    <a href="{{ path('app_appointment_edit', {'id': allAppointments[0].id}) }}" class="w-full text-white focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center bg-gray-900 hover:bg-gray-950">Modifier mon rendez-vous</a>
                    <a href="{{ path('app_appointment_remove', {'id': allAppointments[0].id}) }}" class="w-full text-white focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center bg-red-500 hover:bg-red-600">Supprimer mon rendez-vous</a>
                {% endif %}
              </div>
          </div>
      </div>
  </div>
</section>

{% endblock %}
