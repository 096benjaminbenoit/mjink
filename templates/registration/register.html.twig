<section class="bg-gray-50">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
    <h1 class="font-light text-center font-serif text-3xl mb-10">MJ INK' TATTOO & BARBER</h1>
      <div class="w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0">
          <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
              <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl text-center">
                  Inscrivez-vous
              </h1>
              {{ form_start(registrationForm, {'attr': {'class': 'space-y-4 md:space-y-6'}})}}
                <div>
                    {{ form_label(registrationForm.firstName, 'Votre prénom', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900'}}) }}
                    {{ form_widget(registrationForm.firstName, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5'}}) }}
                </div>
                <div>
                    {{ form_label(registrationForm.lastName, 'Votre nom', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900'}}) }}
                    {{ form_widget(registrationForm.lastName, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5'}}) }}
                </div>
                <div>
                    {{ form_label(registrationForm.phone, 'Votre numéro de téléphone', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900'}}) }}
                    {{ form_widget(registrationForm.phone, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5'~ (registrationForm.phone.vars.valid ? '' : ' border-red-500')}}) }}
                    {% if form_errors(registrationForm.phone) %}
                        <p class="text-red-500 text-xs italic">{{ form_errors(registrationForm.phone) }}</p>
                    {% endif %}
                </div>
                <div>
                    {{ form_label(registrationForm.email, 'Votre adresse mail', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900'}}) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5' ~ (registrationForm.email.vars.valid ? '' : ' border-red-500')}}) }}
                    {% if form_errors(registrationForm.email) %}
                        <p class="text-red-500 text-xs italic">{{ form_errors(registrationForm.email) }}</p>
                    {% endif %}
                </div>
                <div>
                    {{ form_label(registrationForm.plainPassword, 'Votre mot de passe', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900'}}) }}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5' ~ (registrationForm.plainPassword.vars.valid ? '' : ' border-red-500')}}) }}
                    {% if form_errors(registrationForm.plainPassword) %}
                        {{ form_errors(registrationForm.plainPassword, {'attr': {'class': 'text-red-500 text-xs italic'}}) }}
                    {% endif %}
                </div>
                  <div class="flex items-start">
                      <div class="flex items-center h-5">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-primary-300'}}) }}
                      </div>
                      <div class="ml-3 text-sm">
                        <label for="registrationForm.agreeTerms" class="font-light text-gray-500">J'accepte <a class="font-medium text-primary-600 hover:underline" href="#">les conditions d'utilisation</a></label>
                      </div>
                  </div>
                  <button type="submit" class="w-full text-white hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center bg-gray-900 hover:bg-gray-950">Inscription</button>
                  <p class="text-sm font-light text-gray-500">
                      Vous avez déjà un compte ? <a href="{{ path('app_login') }}" class="font-medium text-primary-600 hover:underline">Connectez-vous</a>
                  </p>
              {{ form_end(registrationForm) }}
          </div>
      </div>
  </div>
</section>

{% endblock %}
